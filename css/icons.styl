.icon
  display inline-block

  background transparent none no-repeat center center
  background-size contain

  vertical-align middle

.i--16
  height 16px
  width 16px

.i--24
  height 24px
  width 24px

.i--32
  height 32px
  width 32px

.icon-link
.icon-link:link
.icon-link:visited
  display block

  border 0

  color #66f
  text-decoration none

.icon__text
  vertical-align text-top

.i--gutter
  margin-right 0.1em

.i--goodreads
  background-image embedurl("../img/i-goodreads.svg")

.i--facebook
  background-image embedurl("../img/i-facebook.svg")

.i--twitter
  background-image embedurl("../img/i-twitter.svg")

.i--googleplus
  background-image embedurl("../img/i-googleplus.svg")

.i--amazon
  background-image embedurl("../img/i-amazon.svg")

.i--indigo
  background-image embedurl("../img/i-indigo.svg")

.i--gumroad
  background-image embedurl("../img/i-gumroad.png")
