.icon
  display inline-block

  background transparent none no-repeat center center
  background-size contain

  vertical-align middle

.i--16
  height 16px
  width 16px

.i--24
  height 24px
  width 24px

.i--32
  height 32px
  width 32px

.icon-link
.icon-link:link
.icon-link:visited
  display block

  border 0

  color #66f
  text-decoration none

.icon-label
  border-bottom 1px solid rgba(102, 102, 255, 0.5)

.i--goodreads
  background-image url("../img/i-goodreads.svg")

.i--facebook
  background-image url("../img/i-facebook.svg")

.i--twitter
  background-image url("../img/i-twitter.svg")

.i--googleplus
  background-image url("../img/i-googleplus.svg")

.i--amazon
  background-image url("../img/i-amazon.svg")

.i--indigo
  background-image url("../img/i-indigo.svg")
