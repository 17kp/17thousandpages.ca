html
  margin 0
  overflow-x hidden
  padding 0

  background-color #fff

  color #444
  font normal 100%/1.5 "Source Sans Pro",sans-serif

  @media medium
    font-size 105%

  @media large
    font-size 110%

  @media only screen and (min-width: 80em)
    font-size 120%

  @media only screen and (min-width: 100em)
    font-size 130%

body
  margin 0
  overflow-x hidden
  padding 0

.brand-color
  color brand-primary

.img-flex
  display block
  width 100%

a
a:link
a:visited
  border-bottom 0.1em solid rgba(brand-primary,0.5)
  transition all 150ms linear

  color brand-primary
  text-decoration none

a:hover
a:focus
a:active
  border-color #000

  color #000

ul
  padding 0

  list-style-type none

ul li
  position relative

ul li::before
  content "•"
  left -0.45em
  position absolute

  opacity 0.5

[title="and"]
  font-family Baskerville,Palatino,"Book Antiqua",serif
  font-style italic

.align-right
  text-align right

hr
  margin 0 auto 1.5rem
  max-width 54em
  width 90%

  border 0
  border-top 1px solid brand-medium-grey

.btn
.btn:link
.btn:visited
  display inline-block
  padding 0.3em 0.75em 0.45em

  border 2px solid brand-primary
  border-radius 4px

  white-space nowrap

.btn:hover
.btn:focus
.btn:active
  background-color brand-light-grey
  border-color #000

  color #000

.btn-subtle
.btn-subtle:link
.btn-subtle:visited
  padding 0.25em 0.5em 0.4em

  border 0

.btn-group
  margin-left -0.4em

.masthead
  background-color brand-primary

.logo
  display block
  margin 0 auto
  max-width 250px

  background-color brand-primary

  @media medium
    margin-left 0
    margin-right 0

.logo__link
.logo__link:link
.logo__link:visited
  border 0

.nav
  margin 0 0 1.5rem

  text-align center

  @media medium
    margin 1.5rem 0

    text-align left

@media medium
  .nav li:first-child
    padding-left 0

.nav a
.nav a:link
.nav a:visited
  color #fff

  border-bottom-color brand-primary

.nav .current
.nav .current:link
.nav .current:visited
  position relative

  border 0

.nav .current::after
  bottom -6px
  content "▾"
  left 0
  position absolute
  width 100%

  border-top 2px solid brand-light-grey
  transition all 150ms linear
  opacity 0.7

  line-height 4px
  text-align center

.nav a:hover
.nav a:focus
.nav a:active
.nav .current:hover
.nav .current:focus
.nav .current:active
  color #fff

.nav .current:hover::after
.nav .current:focus::after
.nav .current:active::after
  opacity 1

.nav__heading
  display inline
  margin 0
  padding 0

  font-size inherit
  font-weight normal

.band-light
  background-color brand-light-grey

.band-dark
  background-color brand-medium-grey

.blurb
  font-style italic

.footer
  color #666

.footer a
.footer a:link
.footer a:visited
  border-color rgba(#333, 0.3)

  color #333

.footer a:hover
.footer a:focus
.footer a:active
  border-color #000

  color #000

.copyright
  text-align center

  @media medium
    text-align left

.social-icons
  height 24px

  text-align center

  @media medium
    text-align right

#about
  position relative

#about:target::before
  content "▶︎"
  left -1.3em
  position absolute
  width 1em

  animation about-fade-in 1s linear

  color brand-primary
  text-align right

@keyframes about-fade-in
  0%
    opacity 0
  100%
    opacity 1
