@import 'nib'
@import 'normalize'

medium = "only screen and (min-width: 32em)"
large = "only screen and (min-width: 50em)"

brand-primary = #3a2f73
brand-light-grey = #efefef
brand-medium-grey = #ddd

html
  margin 0
  padding 0

  background-color #fff

  color #444
  font normal 100%/1.5 "Source Sans Pro",sans-serif

  @media medium
    font-size 105%

  @media large
    font-size 110%

  @media only screen and (min-width: 80em)
    font-size 120%

  @media only screen and (min-width: 100em)
    font-size 130%

body
  margin 0
  padding 0

@import 'grid-builder'

grid-units("s", 3)

@media medium
  grid-units("m", 4, true)

@media large
  grid-units("l", 6, true)

.grid
  margin 0 auto
  max-width 60em

@import 'typografier'
@import 'list-group'
@import 'icons'

.brand-color
  color brand-primary

.img-flex
  display block
  width 100%

a
a:link
a:visited
  border-bottom 0.1em solid rgba(brand-primary,0.5)
  transition all 150ms linear

  color brand-primary
  text-decoration none

a:hover
a:focus
a:active
  border-color #000

  color #000

ul
  padding 0

  list-style-type none

ul li
  position relative

ul li:before
  content "â€¢"
  left -0.45em
  position absolute

  opacity 0.5

[title="and"]
  font-family Baskerville,Palatino,"Book Antiqua",serif
  font-style italic

.btn
.btn:link
.btn:visited
  padding 0.5em 0.75em 0.65em

  border 2px solid brand-primary
  border-radius 4px

.btn:hover
.btn:focus
.btn:active
  background-color brand-light-grey
  border-color #000

  color #000

.masthead
  background-color brand-primary

.logo
  display block
  margin 0 auto
  max-width 250px

  background-color brand-primary

  @media medium
    margin-left 0
    margin-right 0

.logo__link
.logo__link:link
.logo__link:visited
  border 0

.nav
  margin 0 0 1.5rem

  text-align center

  @media medium
    margin 1.5rem 0

    text-align left

.nav a
.nav a:link
.nav a:visited
  color #fff

  border-bottom-color brand-primary

.nav .current
.nav .current:link
.nav .current:visited
  border-bottom-color rgba(brand-light-grey, 0.8)

.nav a:hover
.nav a:focus
.nav a:active
.nav .current:hover
.nav .current:focus
.nav .current:active
  border-bottom-color #fff

  color #fff

.nav__heading
  display inline
  margin 0
  padding 0

  font-size inherit
  font-weight normal

.band-light
  background-color brand-light-grey

.band-dark
  background-color brand-medium-grey

.blurb
  font-style italic

.book__cover-wrapper
  overflow hidden

.book__cover
.book__cover:link
.book__cover:visited
  display block
  position relative

  animation slide-book 0.5s ease-out
  border 0

.book__cover:after
  bottom 0
  position absolute

.book__front
  margin-left 10%
  width 90%
  transform perspective(500) rotateY(15deg)
  transform-style preserve-3d
  transform-origin left center
  transition all 100ms linear

.book__spine
  left 0
  height 100%
  width 10%
  position absolute
  top 0
  transform perspective(500) rotateY(-45deg)
  transform-style preserve-3d
  transform-origin right center
  transition all 100ms linear

.book__cover:hover

  .book__front
    transform perspective(400) rotateY(5deg)

  .book__spine
    transform perspective(400) rotateY(-55deg)

@keyframes slide-book
  0%
    transform translateY(20%)
  100%
    transform translateY(0)

.book__title
.book__title:link
.book__title:visited
  display block

  border 0

  color #000

.book__title:hover
.book__title:focus
.book__title:active
  border 0

  color brand-primary

.book__author__by
  color #999
  font-family Baskerville,Palatino,"Book Antiqua",Georgia,serif
  font-style italic

.footer
  color #666

.footer a
.footer a:link
.footer a:visited
  border-color rgba(#333, 0.3)

  color #333

.footer a:hover
.footer a:focus
.footer a:active
  border-color #000

  color #000

.copyright
  text-align center

  @media medium
    text-align left

.social-icons
  height 24px

  text-align center

  @media medium
    text-align right
