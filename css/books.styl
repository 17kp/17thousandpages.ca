.book-group__cover-wrapper
  overflow hidden
  margin-left auto
  margin-right auto

.book-group__cover
.book-group__cover:link
.book-group__cover:visited
  display block
  position relative

  animation slide-book 0.5s ease-out
  border 0

.book-group__cover:after
  bottom 0
  position absolute

.book-group__front
  margin-left 10%
  width 90%
  transform perspective(500) rotateY(15deg)
  transform-style preserve-3d
  transform-origin left center
  transition all 100ms linear

.book-group__spine
  left 1px
  height 100%
  width 10%
  position absolute
  top 0
  transform perspective(500) rotateY(-45deg)
  transform-style preserve-3d
  transform-origin right center
  transition all 100ms linear

.book-group__cover:hover

  .book-group__front
    transform perspective(400) rotateY(5deg)

  .book-group__spine
    transform perspective(400) rotateY(-55deg)

.book-group__cover--disabled:hover

  .book-group__front
    transform perspective(500) rotateY(15deg)

  .book-group__spine
    transform perspective(500) rotateY(-45deg)

@keyframes slide-book
  0%
    transform translateY(20%)
  100%
    transform translateY(0)

.book-group__title
.book-group__title:link
.book-group__title:visited
  display block
  min-height 3rem

  border 0

  color #000
  font-weight normal

.book-group__title:hover
.book-group__title:focus
.book-group__title:active
  border 0

  color brand-primary

.book-group__title--disabled:hover
.book-group__title--disabled:focus
.book-group__title--disabled:active
  color #000

.book-type--novel--portrait
  width 70%

.book-type--picture-book--portrait
  width 97%

.book__author__by
.book-group__author__by
  color #999
  font-family Baskerville,Palatino,"Book Antiqua",Georgia,serif
  font-style italic

.book
  background transparent no-repeat left top
  background-size 100% auto

.book__author__name
.book__author__name:link
.book__author__name:visited
  border 0

.book__title
  font-weight normal

.book__details
  position relative

  @media xlarge
    position absolute

.book__controls
  bottom -0.6rem
  display none
  left 25%
  margin-left -5em
  position absolute
  width 10em

  text-align center

  > li
    display inline-block

  > li::before
    content ""
    display none

  > li:first-child::after
    content "â€¢"
    display inline-block
    margin 0 0.2em 0 0.4em

    color #888

  @media xlarge
    display block

.book__control
  background-color transparent
  border 0
  cursor pointer
  padding 0
  position relative

  color #555

.book__control:hover
  color #000

.book__control:focus
  outline 2px solid #000

.book__control:active
  outline 0

.book__control[data-state="selected"]
  border-bottom 0.2em solid rgba(#555, 0.4)
